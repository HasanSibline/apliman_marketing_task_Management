# AI Service Configuration
PORT=8001
ENVIRONMENT=development

# AI Provider Configuration
AI_PROVIDER=gemini  # Options: gemini, legacy
GOOGLE_API_KEY=your_google_api_key_here  # Required for Gemini
GEMINI_MODEL=gemini-2.0-flash  # Optional, defaults to gemini-2.0-flash

# Legacy AI Configuration (required if AI_PROVIDER=legacy)
LEGACY_AI_KEY=your_legacy_api_key_here
LEGACY_AI_ENDPOINT=your_legacy_endpoint_here
LEGACY_MODEL=gpt-3.5-turbo  # Optional, defaults to gpt-3.5-turbo

# Model Configuration
MODEL_CACHE_DIR=./models
MAX_SUMMARY_LENGTH=150
DEFAULT_TEMPERATURE=0.7

# Rate Limiting
RATE_LIMIT_REQUESTS=60  # requests per minute
RATE_LIMIT_INTERVAL=60  # interval in seconds

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1  # seconds

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600  # seconds

# OCR Configuration (optional)
TESSERACT_CMD=/usr/bin/tesseract

# Logging
LOG_LEVEL=INFO

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3001